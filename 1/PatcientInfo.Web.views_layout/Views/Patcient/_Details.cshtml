        <dt>
            @Html.DisplayNameFor(model => model.DicaseName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DicaseName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Doctor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Doctor)
        </dd>

     
        <dt>
            @Html.DisplayNameFor(model => model.Medical_card)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Medical_card)
        </dd>
    </dl>
</div>
<div>
    <hr />
    <div id="info">
        @using (Ajax.BeginForm(
            "JsonInfo",
            new AjaxOptions
            {
                OnSuccess = "OnSuccess",
                LoadingElementId = "loading",
                LoadingElementDuration = 1000
            }))
        {
            @Html.Hidden("id", @Model.Id)
            <input type="submit" value="Опис" />
        }
