@model PatcientInfo.Web.Models.PatcientViewModel

@{
    ViewBag.Title = "Details";
}


<script type="text/javascript">
    function OnSuccess(data) {
        var info = $('#info');
        info.empty();
        for (var i = 0; i < data.length; i++) {
            info.append('<p>' + data[i] + '</p>');
        }
    }
</script>

