    @*<h4>PatcientViewModel</h4>*@
    <h4>Пацієнт і хвороба</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Sorname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sorname)
