@using (Ajax.BeginForm(
    "_SelectData",
        new AjaxOptions
        {
            UpdateTargetId = "data",
            LoadingElementId = "loading",
            LoadingElementDuration = 1000
        }
        ))
{
    <p>
        Початок назви хвороби<br />
        <input type="text" name="selNazva" />
    </p>
    <p>
        Вид хвороби<br />
        @Html.DropDownList("selDicaseTypeName", ViewBag.selDicaseTypeName as SelectList)
    </p>
   
    <p>
        <input type="submit" value="Відібрати" />
    </p>
    <div id="loading" class="load" style="display:none">
        <p>Завантаження даних...</p>
    </div>
}
